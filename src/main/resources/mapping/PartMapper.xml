    values (#{id,jdbcType=INTEGER}, #{pname,jdbcType=VARCHAR}, #{type,jdbcType=VARCHAR}, 
      #{priority,jdbcType=INTEGER}, #{describe,jdbcType=VARCHAR})
  </insert>
