    VALUE ( #{pname,jdbcType=VARCHAR},#{type,jdbcType=VARCHAR},#{priority,jdbcType=INTEGER},#{describe,jdbcType=VARCHAR} )
  </insert>



  <update id="updateByPrimaryKeySelective" parameterType="com.jd.shop.model.Part" >
